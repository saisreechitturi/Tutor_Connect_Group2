# TutorConnect Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000
JWT_SECRET=tutor-connect-dev-secret-key-2025
JWT_EXPIRES_IN=30d

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=TutorConnect
DATABASE_USER=postgres
DATABASE_PASSWORD=admin

# Database SSL (set to 'true' for production)
DB_SSL_REQUIRED=false

# Email Configuration (optional for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=TutorConnect <noreply@tutorconnect.com>

# Frontend URL for password reset links
FRONTEND_URL=http://localhost:3000
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@tutorconnect.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Security
SESSION_SECRET=tutor-connect-session-secret-2025
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Development Settings
ENABLE_DETAILED_ERRORS=true