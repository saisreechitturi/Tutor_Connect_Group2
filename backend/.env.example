# TutorConnect Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration
# Option 1: Individual parameters (recommended for development)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=tutorconnect_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password

# Option 2: Database URL (alternative to individual parameters)
# DATABASE_URL=postgresql://username:password@localhost:5432/tutorconnect_db

# Database SSL (set to 'true' for production)
DB_SSL_REQUIRED=false

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@tutorconnect.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Security
SESSION_SECRET=your-session-secret-change-this
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Development Settings
ENABLE_DETAILED_ERRORS=true