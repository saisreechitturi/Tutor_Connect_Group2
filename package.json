{
    "name": "tutor-connect-fullstack",
    "version": "1.0.0",
    "description": "Full-stack TutorConnect application with React frontend and Node.js backend",
    "main": "backend/src/server.js",
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "cd backend && npm run dev",
        "client": "cd frontend && npm start",
        "build": "cd backend && npm install && cd ../frontend && npm install && npm run build",
        "start": "cd backend && npm start",
        "startfe": "cd frontend && npm start",
        "startbe": "cd backend && npm start",
        "setup": "npm run setup:backend && npm run setup:frontend",
        "setup:backend": "cd backend && npm install",
        "setup:frontend": "cd frontend && npm install",
        "deploy": "cd frontend && npm run build && npm run deploy"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Abhinaykotla/Tutor_Connect_Group2.git"
    },
    "keywords": [
        "tutoring",
        "education",
        "react",
        "node.js",
        "postgresql",
        "fullstack"
    ],
    "author": "TutorConnect Team",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "nodemailer": "^7.0.10"
    }
}